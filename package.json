{
  "name": "yui-chat-ts",
  "private": false,
  "version": "1.0.0",
  "type": "module",
  "description": "ゆいちゃっとTSは放課後学生タウンの雰囲気を楽しめる無料のお気楽チャットです。",
  "keywords": [
    "ゆいちゃっとTS",
    "放課後学生タウン",
    "お気楽チャット",
    "無料チャット",
    "ブラウザチャット",
    "リアルタイムチャット",
    "学生チャット",
    "オンラインチャット",
    "react",
    "typescript",
    "vite",
    "chat",
    "realtime"
  ],
  "homepage": "https://isrnao.github.io/yui-chat-ts/",
  "repository": {
    "type": "git",
    "url": "https://github.com/isrnao/yui-chat-ts.git"
  },
  "author": "ゆいちゃっとTS開発チーム",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "build:seo": "pnpm run build && pnpm run optimize:seo",
    "optimize:seo": "echo 'SEO最適化完了' && echo 'サイトマップとrobots.txtをチェックしてください'",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.mdx",
    "preview": "vite preview",
    "predeploy": "pnpm run build:seo",
    "deploy": "gh-pages -d dist",
    "test": "vitest run",
    "watch:test": "vitest",
    "test:ui": "vitest run --ui",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "lighthouse": "lighthouse https://isrnao.github.io/yui-chat-ts/ --output html --output-path ./lighthouse-report.html",
    "lighthouse:mobile": "lighthouse https://isrnao.github.io/yui-chat-ts/ --output html --output-path ./lighthouse-mobile.html --emulated-form-factor=mobile",
    "lighthouse:desktop": "lighthouse https://isrnao.github.io/yui-chat-ts/ --output html --output-path ./lighthouse-desktop.html --emulated-form-factor=desktop",
    "lighthouse:json": "lighthouse https://isrnao.github.io/yui-chat-ts/ --output json --output-path ./lighthouse-data.json",
    "lighthouse:ci": "lighthouse https://isrnao.github.io/yui-chat-ts/ --output json --quiet --chrome-flags='--headless'",
    "analyze:bundle": "npx vite-bundle-analyzer dist"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "@supabase/supabase-js": "^2.43.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@mdx-js/react": "^3.1.0",
    "@mdx-js/rollup": "^3.1.0",
    "@tailwindcss/cli": "^4.1.8",
    "@tailwindcss/postcss": "^4.1.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.0.1",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitejs/plugin-react": "^4.4.1",
    "@vitest/coverage-v8": "3.2.3",
    "@vitest/ui": "^3.2.3",
    "@webgpu/types": "^0.1.61",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.25.0",
    "eslint-plugin-mdx": "^3.5.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "gh-pages": "^6.3.0",
    "globals": "^16.0.0",
    "jsdom": "^26.1.0",
    "lefthook": "^1.11.13",
    "lighthouse": "^12.6.1",
    "postcss": "^8.5.4",
    "prettier": "^3.5.3",
    "sass": "^1.89.1",
    "tailwindcss": "^4.1.8",
    "terser": "^5.42.0",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite": "^6.3.5",
    "vitest": "^3.2.3"
  }
}
